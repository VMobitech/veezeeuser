<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_2sdp"
    android:layout_margin="@dimen/_8sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_corners_dialog"
    android:layout_height="wrap_content">
    <com.versatilemobitech.VeeZee.views.MontserratTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_report"
        android:text="@string/report_an_issue"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_14sdp"
        app:font_type="semibold"
        android:padding="@dimen/_8sdp"
        android:textColor="@color/red"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="@dimen/_10sdp"
        android:background="@color/light_ash"/>
    <com.versatilemobitech.VeeZee.views.MontserratTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_dismiss"
        android:textSize="@dimen/_14sdp"
        app:font_type="semibold"
        android:gravity="center_horizontal"
        android:padding="@dimen/_8sdp"
        android:text="@string/dismiss"/>

</LinearLayout>
</androidx.cardview.widget.CardView>