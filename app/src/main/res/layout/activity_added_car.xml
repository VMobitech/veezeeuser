<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context="com.versatilemobitech.VeeZee.Activities.AddedCarActivity">

    <ImageView
        android:id="@+id/imq_qr"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:src="@drawable/qr_code"
        android:layout_centerHorizontal="true"
        android:background="@color/light_ash1"
        />

    <com.versatilemobitech.VeeZee.views.MontserratTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_success"
        android:text="@string/added_car"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_below="@id/imq_qr"
        app:font_type="semibold"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@android:color/black"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_50sdp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_addcar"
            app:srcCompat="@drawable/ic_add_car"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:background="@drawable/thickboarded_background" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_ok"
            android:paddingLeft="@dimen/_32sdp"
            android:paddingRight="@dimen/_32sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_9sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:background="@drawable/thickboarded_background"
            app:srcCompat="@drawable/ic_check_mark" />

    </LinearLayout>

</RelativeLayout>
