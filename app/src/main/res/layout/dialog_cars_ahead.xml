<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_15sdp">
        <com.versatilemobitech.VeeZee.views.MontserratTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_description"
            android:text="Token"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            app:font_type="bold"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            />
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/img_close"
            android:src="@drawable/ic_cancel"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/img_vault"
        android:padding="-10dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:src="@drawable/ic_group_661"/>
        <com.versatilemobitech.VeeZee.views.MontserratTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_token_no"
            android:textColor="@color/colorAccent"
            android:text="28"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_5sdp"
            android:gravity="center"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/image_view_car"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/acura" />

    <com.versatilemobitech.VeeZee.views.MontserratTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_car_no"
        android:textColor="@color/black"
        android:text="TS 07 SD 4009"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_3sdp"
        android:layout_marginTop="-5dp"
        android:textStyle="bold"
        app:font_type="bold"
        android:gravity="center"/>
    <com.versatilemobitech.VeeZee.views.MontserratTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_noOfcars"
        android:textColor="@color/black"
        android:text="3 Cars ahead of you"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_3sdp"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_15sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingLeft="@dimen/_15sdp">
        <com.versatilemobitech.VeeZee.views.MontserratTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_time"
            android:text="03:00"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/montserrat"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/img_call"
            android:src="@drawable/ic_call_colored"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_toRightOf="@id/txt_time"
            android:layout_marginBottom="@dimen/_5sdp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_below="@+id/pager_images"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_refresh"
        android:src="@drawable/ic_refresh_black_24dp"
        android:layout_gravity="center"
        android:tint="@color/colorAccent"
        android:layout_marginBottom="@dimen/_20sdp"/>

</LinearLayout>