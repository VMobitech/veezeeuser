<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:layout_constraintCircleRadius="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_6sdp"
    android:layout_marginRight="@dimen/_6sdp"
    android:layout_height="wrap_content">
    <com.versatilemobitech.VeeZee.UtilHelpers.CustomImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_background"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/ll_header"
        android:layout_alignBottom="@id/ll_header"
        android:layout_alignLeft="@id/ll_header"
        android:layout_alignRight="@id/ll_header"
        android:src="@drawable/valet_history_placeholder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners_dialog"
        android:backgroundTint="#B2000000"
        android:id="@+id/ll_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            >
            <com.versatilemobitech.VeeZee.views.MontserratTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spe. 14 | Over the Moon"
                android:id="@+id/text_view_description"
                android:layout_gravity="center_vertical"
                android:textColor="@color/light_white"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                app:font_type="semibold"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_option_menu"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/ic_more"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            android:layout_marginBottom="@dimen/_2sdp"
            android:visibility="visible"
            android:layout_below="@id/ll">
            <com.versatilemobitech.VeeZee.views.MontserratTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Hotel Daspalla, Rooftop, Road 37,\nJubilli Hills, Hyderabad "
                android:textColor="@color/light_white"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/txt_address"
                app:font_type="medium"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@id/txt_address"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.2">

                    <com.versatilemobitech.VeeZee.views.MontserratTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_piked_by"
                        android:text="Picked by John wasi at 18:50 "
                        android:textColor="@color/light_white"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:font_type="medium"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"/>
                    <com.versatilemobitech.VeeZee.views.MontserratTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/text_view_dropped_by"
                        android:text="Droped by Harisha at 23:44"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/_10sdp"
                        app:font_type="medium"
                        android:layout_marginLeft="@dimen/_5sdp"/>
                </LinearLayout>
                <com.versatilemobitech.VeeZee.views.MontserratTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textStyle="bold"
                    app:font_type="bold"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Tip\n$100"
                    android:visibility="gone"
                    android:background="@drawable/background_round"
                    android:textColor="@color/light_white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>